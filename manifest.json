{
  "manifest_version": 2,
  "name": "YouTube Screenshot",
  "description": "Take screenshots from YouTube Video & Shorts",
  "version": "3.0.0",
  "icons": {
    "96": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": ["storage", "clipboardWrite", "notifications"]
}
